{% extends '@Admin/layout_login.html.twig' %}

{% block body %}
    <div class="form-box" id="login-box">
        <div class="header">Identification</div>

        <form action="{{ path("_security_check") }}" method="post" id="login">

            {% if error %}
                <span class="error_login">{{ error.message|trans }}</span>
            {% endif %}

            <div class="body bg-gray">
                <div class="form-group">
                    <input type="email" name="_username" class="form-control" placeholder="Adresse email">
                </div>
                <div class="form-group">
                    <input type="password" name="_password" class="form-control" placeholder="Mot de passe">
                </div>
                <div class="form-group">
                    <input style="margin-right: 10px" type="checkbox" id="remember_me" name="_remember_me" checked><label style="cursor: pointer; font-weight: 400;" for="remember_me">Se souvenir de moi</label>
                </div>
            </div>
            <div class="footer">
                <button type="submit" class="btn bg-olive btn-block">Se connecter</button>
                {#<p><a href="#">J'ai oubli√© mon mot de passe</a></p>#}
            </div>
        </form>
    </div>
{% endblock %}
